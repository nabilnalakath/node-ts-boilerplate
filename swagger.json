{
    "openapi": "3.0.0",
    "info": {
      "title": "My API",
      "version": "1.0.0",
      "description": "API Documentation"
    },
    "paths": {
      "/api/hello": {
        "get": {
          "summary": "Returns a Hello World message.",
          "tags": ["Hello"],
          "responses": {
            "200": {
              "description": "A JSON object containing a Hello World message.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "Hello, World!"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  