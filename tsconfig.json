{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,  // import json modules
    "allowSyntheticDefaultImports": true  // Handle default imports
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
